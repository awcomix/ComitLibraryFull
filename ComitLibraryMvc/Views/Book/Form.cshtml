@model ComitLibrary.Models.Book;

<div>
    <h2>New Book</h2>
    <hr/>
    <p>
        Please enter the following information to add a new book to the library!
    </p>
    
    <div>
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Title">Title</label>
                <input type="text" class="form-control" asp-for="Title">
            </div>
            <div class="form-group">
                <label asp-for="Author">Author</label>
                <input type="text" class="form-control" asp-for="Author">
            </div>
            <button type="submit" class="btn btn-success">Create new Book!</button>
        </form>
    </div>
    <br/>
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>